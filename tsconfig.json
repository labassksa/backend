{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "rootDir": "src",
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true
  }
}
